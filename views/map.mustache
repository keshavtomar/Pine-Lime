<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Map Page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  <style>
    #map-container {
      width: 400px;
      height: 400px;
    }
  </style>
</head>
<body>
  <h1>Map Page</h1>
  <div id="map-container"></div>

  <script>
    // Access the latitude and longitude values from the template
    const latitude = {{latitude}};
    const longitude = {{longitude}};

    // Use the coordinates to center the map
    // Add your map initialization code here using a mapping library like Leaflet, Google Maps, etc.
    // Example using Leaflet:
    const mymap = L.map('map-container').setView([latitude, longitude], 13);

    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
      attribution: 'Â© OpenStreetMap contributors'
    }).addTo(mymap);

    L.marker([latitude, longitude]).addTo(mymap)
      .bindPopup('Your location!')
      .openPopup();
  </script>
</body>
</html>

